<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="50dp" >

  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
         android:layout_marginRight="10dp"
        android:background="#fff" >

       
        <ImageView
            android:id="@+id/customImageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
             />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/customImageView1"
            android:singleLine="true"
            android:text="4 hours ago"
            android:textColor="#bdc2c6"
           android:layout_alignBottom="@+id/customImageView1"
           android:layout_marginLeft="5dp"
        	android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt"
            android:textColor="#000"
            android:layout_alignTop="@+id/customImageView1"
            android:singleLine="true"
            android:text="Deep Messaged you"
            android:textSize="14sp" />
        
    </RelativeLayout>

</RelativeLayout>